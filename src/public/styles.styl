@import 'https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css';
@import '~@ngx-share/button/styles/share-buttons.css';
@import '~@ngx-share/button/styles/themes/default/default-theme.css';
@import '~@ngx-share/button/styles/themes/circles/circles-dark-theme.css';

.footer
  position: absolute
  bottom: 0
  height: 60px
  line-height: 60px
  width: 100%

html
  position: relative
  min-height: 100%

body
  margin-bottom: 60px
  font-family: Avenir Next

section.scroll-section
  min-height: 100vh
  padding-top: 2em
  padding-bottom: 2em

section.scroll-section:nth-of-type(1)
  h1, h2, h3, h4, h5, h6
    color: rgba(0, 164, 197, 1)

for num in (1..5)
  section.scroll-section:nth-of-type(5n + {num + 1})
    weight =  1 - (0.25 * (num - 1))
    background-color: rgba(0, 164, 197, weight)
    h1, h2, h3, h4, h5, h6
      if (weight < 0.25)
        color: rgba(0, 164, 197, 1)
      else
        color: white
