@import 'https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css';
@import 'https://use.fontawesome.com/releases/v5.3.1/css/all.css';
@import '~@ngx-share/button/themes/default/default-theme.css';
@import '~@ngx-share/button/themes/circles/circles-dark-theme.css';

.footer
  height: auto
  bottom: 0
  padding-bottom: 0.5em
  padding-top: 0.7em
  width: 100%

/* for sticky footer*/
app-root
  display: flex
  min-height: 100vh
  flex-direction: column
app-root > .content-section
  flex: 1

html
  position: relative
  min-height: 100%

body
  font-family: Avenir Next
  color: #6c757d

section.scroll-section
  min-height: 35vh
  padding-top: 2em
  padding-bottom: 2em

@media (max-width: 576px)
   h1 { font-size: 24px !important; }

section.scroll-section:nth-of-type(1)
  h1, h2, h3, h4, h5, h6
    color: rgba(0, 164, 197, 1)

for num in (1..5)
  section.scroll-section:nth-of-type(5n + {num + 1})
    weight =  1 - (0.25 * (num - 1))
    background-color: rgba(0, 164, 197, weight)

    if (weight < 0.25)
      color: rgba(0, 164, 197, 1)
    else
      color: #323232

    h3, h4, h5, h6
      if (weight < 0.25)
        color: rgba(0, 164, 197, 1)
      else
        color: #525252
