@import 'https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css';

.footer
  position: absolute
  bottom: 0
  height: 60px
  line-height: 60px
  width: 100%

html
  position: relative
  min-height: 100%

body
  margin-bottom: 60px
  font-family: Avenir Next

section.scroll-section
  padding: 2em
  min-height: 100vh

section.scroll-section:nth-of-type(1)
  h1, h2, h3, h4, h5, h6
    color: rgba(0, 164, 197, 1)

for num in (2..6)
  section.scroll-section:nth-of-type({num}n)
    weight =  1 - (0.25 * (num - 2))
    background-color: rgba(0, 164, 197, weight)
    h1, h2, h3, h4, h5, h6
      if (weight < 0.25)
        color: rgba(0, 164, 197, 1)
      else
        color: white
