.flex
  width: 100%
  display: flex
  justify-content: space-between
  flex-wrap: wrap
  li.nav-item
    flex: 1
    
.get-naloxone
  border-radius: 100px!important
  padding: 12px 20px
  cursor: pointer!important
  
.dropdown-menu
  min-width: 100%
  margin-top: 0px
  
@media screen and (min-width: 769px)
 .dropdown-menu
   display: none
 .dropdown:hover .dropdown-menu
   display: block

@media screen and (max-width: 576px)
  .navbar-brand
    margin-right: 0px
  #get-naloxone
    margin-left: -1rem

.footer-link
  color: #6c757d
  text-decoration: underline

.footer-link:hover
  if (weight < 0.25)
    color: rgba(0, 164, 197, 1)
  else
    color: #525252
