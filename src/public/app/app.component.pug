            a.dropdown-item.nav-link(routerLink="/training" fragment="administering-naloxone") Administering Naloxone
            a.dropdown-item.nav-link(routerLink="/training" fragment="aftercare") Aftercare
        li.nav-item(ngbDropdown)
          a.nav-link.dropdown-toggle.text-sm-left.text-md-center(ngbDropdownToggle routerLink="/faq")  FAQs
          .dropdown-menu.text-center(ngbDropdownMenu)
            a.dropdown-item.nav-link(routerLink="/faq" fragment="general") General
            a.dropdown-item.nav-link(routerLink="/faq" fragment="privacy-hipaa") Privacy and HIPAA
            a.dropdown-item.nav-link(routerLink="/faq" fragment="additional-resources") Additional Resources
        li.nav-item(ngbDropdown)
          a.nav-link.dropdown-toggle.text-sm-left.text-md-center(ngbDropdownToggle routerLink="/about-us") About Us
          .dropdown-menu.text-center(ngbDropdownMenu)
            a.dropdown-item.nav-link(routerLink="/about-us" fragment="app-mission") Mission
            a.dropdown-item.nav-link(routerLink="/about-us" fragment="app-history") History
            a.dropdown-item.nav-link(routerLink="/about-us" fragment="app-our-team") Our Team
            a.dropdown-item.nav-link(routerLink="/about-us" fragment="app-our-sponsors") Our Sponsors
            a.dropdown-item.nav-link(routerLink="/about-us" fragment="app-contact") Contact Us
        li.nav-item(ngbDropdown)
          a.nav-link.dropdown-toggle.text-sm-left.text-md-center(ngbDropdownToggle routerLink="/pharmacy") RX
          .dropdown-menu.text-center(ngbDropdownMenu)
            a.dropdown-item.nav-link(routerLink="/pharmacy" fragment="our-partners") Partners

