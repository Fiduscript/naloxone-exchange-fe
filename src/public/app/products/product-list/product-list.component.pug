section.mt-2.row
  .col-sm-12.col-md-4.col-lg-3
    .row
      .col-md-12
        h4
          a.mr-lg-3(routerLink="/products/{{product.id}}") {{product.title}}
        em {{product.price | currency}}
    .row
      .col-md-12
        img.mt-2(src="{{product.imageUri}}" style="width:100%;max-height:300px")
    .row
      .col-md-12.mt-2
        button.btn.btn-outline-secondary.pull-left.mr-lg-2(routerLink="/products/{{product.id}}") more info
        button.btn.btn-outline-primary.pull-right add to cart

  .col-sm-12.col-md-6.col-lg-7
    .row
      .col-sm-12.col-md-12.col-lg-12
        markdown {{product.detailShort}}
